<odoo>
    <data>
        <!-- form_view -->
        <record id="hospital_management.form" model="ir.ui.view">
            <field name="name">hospital.management form</field>
            <field name="model">hospital.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived"
                                bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <h1>
                            <field name="reference_no" readonly="True"/>
                        </h1>
                        <group>
                            <group>
                                <field name="patient_id" string="Patient"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street"
                                           class="o_address_street"/>
                                    <field name="street2"
                                           class="o_address_street"/>
                                    <field name="city"
                                           class="o_address_city"/>
                                    <field name="zip"
                                           class="o_address_zip"/>
                                    <field name="state_id"/>
                                    <field name="country_id"
                                           class="o_address_country"/>
                                </div>
                            </group>
                            <group>
                                <field name="patient_mobile" string="mobile"/>
                                <field name="patient_phone" string="Phone"/>
                                <field name="gender"/>
                                <field name="dob"/>
                                <field name="age" string="Age"/>
                                <field name="blood_group"/>
                                <field name="active" invisible="True"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="OP History">
                                <field name="op_ids">
                                    <tree>
                                        <field name="date" string="Date"/>
                                        <field name="token_no" string="Token No"
                                               readonly="True"/>
                                        <field name="doctor_id"
                                               string="Doctor "/>
                                        <field name="doctor_dept_id"
                                               string="Department "/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- Patient Card Kanban View  -->
        <record model="ir.ui.view" id="view_patient_card_kanban">
            <field name="name">hospital_cards_kanban</field>
            <field name="model">hospital.management</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" sample="1">
                    <field name="patient_id"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="activity_state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span>
                                                <strong>
                                                    <t t-esc="record.patient_id.value"/>
                                                </strong>
                                                <br/>
                                                <field name="blood_group"
                                                       widget="label_selection"/>
                                                <!-- </br> -->
                                                <field name="gender"/>
                                            </span>
                                        </strong>
                                    </div>
                                    <strong>
                                        <field name="reference_no"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <div class="o_kanban_image">
                                            <field name="image" widget="image"
                                                   class="oe_right oe_avatar"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
