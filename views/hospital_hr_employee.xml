<odoo>
    <data>
        <!-- inherit view  -->
        <record model="ir.ui.view" id="hospital_management_hr_inherit">
            <field name="name">hospital.management hr_inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref='hr.view_employee_form'/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='job_id']" position="after">
                    <field name="currency_id" invisible="True"/>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="fee" widget="monetary" readonly="False"
                           attrs="{'invisible': [('job_title','!=', 'Doctor'),('job_id','!=', 'Doctor')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
